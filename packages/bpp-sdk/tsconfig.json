{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "dist/",
    "declarationDir": "dist/dts/",                          
    "rootDir": "src/",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "declaration": true,
    "moduleResolution": "node",
  },
  "include": ["src/"],
}